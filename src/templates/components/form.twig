<form id="contactForm" action="" method="POST" novalidate class="contact-form p-4 pt-5">
	<div class="row">
		<div class="col-md-4 mb-4">
			<div class="field variant-text">
				<label for="name" class="form-label lead">YOUR NAME</label>
				<input id="name"
                    name="name"
                    type="text"
                    class="form-control"
                    placeholder=""
                    autocomplete="">
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="field variant-text">
				<label for="email" class="form-label lead">EMAIL ADDRESS</label>
				<input id="email"
                    name="email"
                    type="text"
                    class="form-control"
                    required 
                    placeholder=""
                    autocomplete="">
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="field variant-text">
				<label for="mobileNumber" class="form-label lead">YOUR MOBILE NO.</label>
				<input id="mobileNumber"
                    name="mobileNumber"
                    type="tel"
                    pattern="\d{10,}"
                    class="form-control"
                    placeholder="">
			</div>
		</div>

		<div class="col-12 mb-4">
			<div class="field variant-text">
				<label for="subject" class="form-label lead">SUBJECT</label>
				<input id="subject"
                    name="subject"
                    type="text"
                    class="form-control"
                    autocomplete="">
			</div>
		</div>

		<div class="col-12 mb-4">
			<label class="form-label lead" for="message">TYPE YOUR MESSAGE HERE</label>
			<textarea name="message" 
                id="message" 
                rows="3" 
                class="form-control"
                placeholder=""></textarea>
		</div>
	</div>

	<div class="d-flex justify-content-end">
		<button class="btn btn-outline-primary" type="submit">Send Message</button>
	</div>
</form>