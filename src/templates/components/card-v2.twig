<div class="card card-variant-2">
	<div class="img-wrapper mx-auto mb-1">
		<img src="{{ image }}"  alt="{{ cardTitle }}">
	</div>
	<div class="card-body p-md-4">
        <div class="d-flex flex-column justify-content-around">
            <h5 class="card-title mb-3">{{ cardTitle }}</h5>
            <p class="card-text mb-3 lead">{{ cardText }}</p>

            <div class="d-flex">
                <a class="card-cta stretched-link"  href="{{ cardUrl }}">
                    {{ ctaLabel }}
                </a>
                <div class="icon-wrapper ms-2">
                    {% include "@::templates/components/icon.twig" with { iconName: 'right-arrow', iconSize: '' } %}
                </div>
            </div>
        </div>
	</div>
</div>