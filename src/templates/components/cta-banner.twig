<div class="cta-banner bg-p1 py-5 px-3 p-md-5">
	<div class="d-block d-md-flex justify-content-center text-white">
		<div class="banner-text me-md-5">
			<h4 class="mb-md-2">{{ subTitle }}</h4>
			<h2 class="animated text-slide-in">{{ title }}</h2>
		</div>
		<div class="banner-cta mt-3{{ hideForms ? ' d-none' }}">
			<a href="#" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#careerModal">{{ ctaLabel }}</a>
		</div>
		<!-- Modal -->
		<div class="modal fade" id="careerModal" tabindex="-1" aria-labelledby="careerModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg modal-dialog-centered">
				<div class="modal-content bg-gray-200 py-4 px-3">
					<div class="modal-header d-block">
						<h2 class="modal-title text-dark mb-2 text-uppercase">{{ modalModel.title }}</h2>
						<p class="text-dark lead mb-0">{{ modalModel.description }}</p>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body pt-0 px-4">
						<form id="becomeAssociateForm" action="https://maxxima.my/api/become-associate-form/submissions?fullName=Arif&mobileNumber=+60196466422&email=test@test.com" method="POST" novalidate class="career-form">
							<div class="row">
								<div class="col-md-6 mb-4 g-2">
									<div class="field variant-text">
										<label for="name" class="form-label lead">{{ modalModel.nameLabel }}</label>
										<input id="name"
											name="name"
											type="text"
											class="form-control"
											placeholder=""
											autocomplete="">
										<small class="invalid-text text-red d-none">*This field is invalid</small>

									</div>
								</div>
								<div class="col-md-3 mb-4 g-2">
									<div class="field variant-text">
										<label for="mobileNumber" class="form-label lead">{{ modalModel.phoneLabel }}</label>
										<input id="mobileNumber"
											name="mobileNumber"
											type="text"
											class="form-control"
											placeholder=""
											autocomplete="">
										<small class="invalid-text text-red d-none">*This field is invalid</small>
									</div>
								</div>
								<div class="col-md-3 mb-4 g-2">
									<div class="field variant-text">
										<label for="email" class="form-label lead">{{ modalModel.emailLabel }}</label>
										<input id="email"
											name="email"
											type="text"
											class="form-control"
											placeholder=""
											autocomplete="">
										<small class="invalid-text text-red d-none">*This field is invalid</small>
									</div>
								</div>
								<div class="d-flex justify-content-end">
									<button class="btn btn-outline-primary variant-large px-5" type="submit">{{ modalModel.sendButtonLabel }}</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>